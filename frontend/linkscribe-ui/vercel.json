{
    "rewrites": [
        {
            "source": "/auth/:path*",
            "destination": "/with-modal/auth/:path*",
            "headers": [
                {
                    "key": "next-url",
                    "value": "true"
                }
            ]
        },
        {
            "source": "/with-modal/:path*",
            "destination": "/:path*"
        },
        {
            "source": "/:path*",
            "destination": "/with-modal/:path*"
        }
    ]
}
  